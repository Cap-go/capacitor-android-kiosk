{
  "name": "@capgo/capacitor-android-kiosk",
  "version": "7.0.0",
  "description": "Android Kiosk Mode plugin for Capacitor - Lock device into kiosk mode with launcher functionality",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/"
  ],
  "author": "Martin Donadieu <martin@capgo.app>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cap-go/capacitor-android-kiosk.git"
  },
  "bugs": {
    "url": "https://github.com/Cap-go/capacitor-android-kiosk/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "android",
    "kiosk",
    "launcher",
    "lock",
    "screen",
    "native",
    "device-management"
  ],
  "scripts": {
    "verify": "npm run verify:android && npm run verify:web",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write",
    "eslint": "eslint .",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\" --plugin=prettier-plugin-java",
    "docgen": "docgen --api CapacitorAndroidKioskPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.mjs",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^7.0.0",
    "@capacitor/cli": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@capacitor/docgen": "^0.3.0",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@types/node": "^22.13.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "prettier-plugin-java": "^2.6.7",
    "rimraf": "^6.0.1",
    "rollup": "^4.34.6",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "@capacitor/core": ">=7.0.0"
  },
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "prettier": "@ionic/prettier-config",
  "capacitor": {
    "android": {
      "src": "android"
    }
  }
}
